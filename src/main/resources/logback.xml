<configuration>
    <appender name="STDOUT" class="CustomAppender">
        <encoder class="CustomEncoder">
            <providers>
                <logstashMarkers/>
                <pattern>
                    <pattern>
                        {
                        "timestamp": "%date{ISO8601}"
                        }
                    </pattern>
                </pattern>
            </providers>
            <customFields>
                {
                "appname":"myWebservice",
                "roles":"auth",
                "buildinfo":
                    {
                    "version":"Version 0.1.0-SNAPSHOT",
                    "lastcommit":"75473700d5befa953c45f630c6d9105413c16fe1"
                    }
                }
            </customFields>
        </encoder>
    </appender>
    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
